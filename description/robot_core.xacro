<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>
    
    <!-- Colors -->

    <material name="black">
        <color rgba= "0 0 0 1" />
    </material>

    <material name="white">
        <color rgba= "1 1 1 1" />
    </material>

    <material name="red">
        <color rgba= "1 0 0 1" />
    </material>

    <material name="blue">
        <color rgba= "0.2 0.2 1 1" />
    </material>

    <material name="orange">
        <color rgba= "1 0.3 0.1 1" />
    </material>

    <!-- Base frame -->

    <link name="base_link" />

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.295 0 0" />
    </joint>

    <!-- Chassis -->

    <link name="chassis">
        <visual>
            <origin xyz="0.295 0.0 0.15"/>
            <geometry>
                <box size="0.59 0.25 0.30"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.295 0.0 0.15"/>
            <geometry>
                <box size="0.59 0.25 0.30"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.59" y="0.25" z="0.30">
            <origin xyz="0.295 0.0 0.15"/>
        </xacro:inertial_box>

        <visual>
            <origin xyz="0.295 0.245 0.15"/>
            <geometry>
                <box size="0.59 0.0915  0.30"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.295 0.245 0.15"/>
            <geometry>
                <box size="0.59 0.0915  0.30"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.59" y="0.0915" z="0.30">
            <origin xyz="0.295 0.245 0.15"/>
        </xacro:inertial_box>

        <visual>
            <origin xyz="0.295 -0.245 0.15"/>
            <geometry>
                <box size="0.59 0.0915 0.30"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.295 -0.245 0.15"/>
            <geometry>
                <box size="0.59 0.0915 0.30"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.59" y="0.0915" z="0.30">
            <origin xyz="0.295 -0.245 0.15"/>
        </xacro:inertial_box>

        <visual>
            <origin xyz="0.0 0.0 0.15"/>
            <geometry>
                <box size="0.0925 0.59 0.30"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.15"/>
            <geometry>
                <box size="0.0925 0.59 0.30"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.0925" y="0.59" z="0.30">
            <origin xyz="0.0 0.0 0.15"/>
        </xacro:inertial_box>

        <visual>
            <origin xyz="0.59 0.0 0.15"/>
            <geometry>
                <box size="0.0925 0.59 0.30"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.59 0.0 0.15"/>
            <geometry>
                <box size="0.0925 0.59 0.30"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.0925" y="0.59" z="0.30">
            <origin xyz="0.59 0.0 0.15"/>
        </xacro:inertial_box>
    </link>

    <!-- Left wheel -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0 0.1625 0" rpy="-1.571 0 0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_wheel_link">
        <visual name="left_wheel_link">
            <geometry>
                <cylinder radius="0.05" length="0.06"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>
    
    <!-- Right wheel -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0 -0.1625 0" rpy="1.571 0 0"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="right_wheel_link">
        <visual name="right_wheel_link">
            <geometry>
                <cylinder radius="0.05" length="0.06"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Caster wheel 1 -->

    <joint name="caster_wheel_joint_1" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_link_1"/>
        <origin xyz="0.05 0.245 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="caster_wheel_link_1">
        <visual name="caster_wheel_link_1">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- Caster wheel 2 -->

    <joint name="caster_wheel_joint_2" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_link_2"/>
        <origin xyz="0.05 -0.245 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="caster_wheel_link_2">
        <visual name="caster_wheel_link_2">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- Caster wheel 3 -->

    <joint name="caster_wheel_joint_3" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_link_3"/>
        <origin xyz="0.54 0.245 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="caster_wheel_link_3">
        <visual name="caster_wheel_link_3">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- Caster wheel 4 -->

    <joint name="caster_wheel_joint_4" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_link_4"/>
        <origin xyz="0.54 -0.245 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="caster_wheel_link_4">
        <visual name="caster_wheel_link_4">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>
</robot>